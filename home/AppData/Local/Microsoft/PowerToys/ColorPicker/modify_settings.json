{{- /* chezmoi:modify-template */ -}}

{{- $in := dict -}}
{{- if not (.chezmoi.stdin | empty) -}}
{{-     $in = .chezmoi.stdin | fromJson -}}
{{- end -}}

{{- $out := $in | jq `
    .name = "ColorPicker"
    | .properties = {
        "ActivationShortcut": {
            "alt": true,
            "code": 67,
            "ctrl": false,
            "key": "",
            "shift": true,
            "win": false,
        }
    }` | first -}}

{{- if deepEqual $in $out -}}
{{-     .chezmoi.stdin -}}
{{- else -}}
{{-     $out | toJson -}}
{{- end -}}
